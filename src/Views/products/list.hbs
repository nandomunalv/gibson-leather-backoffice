<div class="mt-3 mb-5">
    <h1>Listado de Productos</h1>
    <form action="/products/list" method="get">
        <div class="row">
            <div class="col-md-9">
                <div class="input-group mb-3 mt-3">
                    <input type="text" class="form-control"
                           placeholder="Busca por SKU o nombre"
                           aria-label="Busca por SKU o nombre"
                           aria-describedby="button-addon2" name="q">
                    <button class="btn btn-primary" id="button-addon2" type="submit">
                        <i class="fa fa-search" aria-hidden="true"></i>
                        Buscar
                    </button>
                </div>
            </div>
            <div class="col-md-3">
                <div class="d-grid gap-2 mb-3 mt-3">
                    <a href="/products/add" class="btn btn-primary">Nuevo Producto</a>
                </div>
            </div>
        </div>
    </form>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">SKU</th>
            <th scope="col">Nombre</th>
            <th scope="col">Color</th>
            <th scope="col">Precio</th>
            <th scope="col">Stock</th>
            <th scope="col">Opciones</th>
        </tr>
        </thead>
        <tbody>
        {{#each result}}
            <tr>
                <th class="align-middle" scope="row">{{productSku}}</th>
                <td class="align-middle">{{productName}}</td>
                <td class="align-middle">{{productColor}}</td>
                <td class="align-middle">{{productPrice}}</td>
                <td class="align-middle">{{productStock}}</td>
                <td class="align-middle">
                    <a href="/products/edit/{{productSku}}" class="btn btn-primary"><i class="fa fa-pencil"
                                                                                       aria-hidden="true"></i></a>
                        <button type="button" class="btn btn-primary" onclick="{{hello}}">
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                    </button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
