<div class="mt-3 mb-5">
    <div>
        <h1>Nuevo Cliente</h1>
    </div>
    <form action="/customers/api/customers" method="POST">
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="documentTypeInput" class="form-label">Tipo de Documento</label>
                    <input type="text" name="documentType" class="form-control" id="documentTypeInput"
                        placeholder="DNI/RUC">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="documentNumberInput" class="form-label">Nro de Documento</label>
                    <input type="text" name="documentNumber" class="form-control" id="documentNumberInput"
                        placeholder="65847753">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="nameInput" class="form-label">Nombres</label>
                    <input type="text" name="name" class="form-control" id="nameInput" placeholder="Jhon">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="lastNameInput" class="form-label">Apellidos</label>
                    <input type="text" name="lastName" class="form-control" id="lastNameInput" placeholder="Doe">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Correo Electrónico</label>
                    <input type="email" name="email" class="form-control" id="emailInput"
                        placeholder="name@example.com">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="phoneNumberInput" class="form-label">Telefono/Celular</label>
                    <input type="text" name="phoneNumber" class="form-control" id="phoneNumberInput"
                        placeholder="925697495">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label for="mainAddressInput" class="form-label">Dirección</label>
                    <input type="text" name="mainAddress" class="form-control" id="mainAddressInput"
                        placeholder="name@example.com">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="referenceAddressInput" class="form-label">Referencia</label>
                    <input type="text" name="referenceAddress" class="form-control" id="referenceAddressInput"
                        placeholder="Cruce con Avenida San Pablo 321">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="referenceOlvaCourierInput" class="form-label">Referencia Olva Courier</label>
                    <input type="text" name="referenceOlvaCourier" class="form-control" id="referenceOlvaCourierInput"
                        placeholder="Olva de Jirón de al Unión">
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-3">
                <div class="mb-3">
                    <label for="ubigeoCountryDropdown" class="form-label">País</label>
                    <input type="text" name="ubigeoCountry" class="form-control" id="ubigeoCountryDropdown"
                        placeholder="Perú">
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label for="ubigeoDepartmentDropdown" class="form-label">Departamento</label>
                    <input type="text" name="ubigeoDepartment" class="form-control" id="ubigeoDepartmentDropdown"
                        placeholder="Lima">
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label for="ubigeoProvinceDropdown" class="form-label">Provincia</label>
                    <input type="text" name="ubigeoProvince" class="form-control" id="ubigeoProvinceDropdown"
                        placeholder="Lima">
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Distrito</label>
                    <input type="text" name="ubigeoDistrict" class="form-control" id="exampleFormControlInput1"
                        placeholder="Lima">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3"></div>
            <div class="col-md-3"></div>
            <div class="col-md-3">
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit">Crear</button>
                </div>
            </div>
        </div>
    </form>
</div>